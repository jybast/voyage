{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe
{% endblock %}

{% block body %}
	<div class="formulaire_conteneur">
		<div class="formulaire_masque">
			<div class="row">
				<div class="col">
					<div class="formulaire-logo">
						<img src="{{ asset('assets/img/cc.png')| imagine_filter('vignette') }} " alt="Logo">
					</div>
				</div>
				<div class="col">
					<h1 class="formulaire_titre">Modifier
                    <h1 class="formulaire_titre">le mot de passe</h1> 
				</div>
			</div>
			{% for flashError in app.flashes('reset_password_error') %}
				<div class="alert alert-danger" role="alert">{{ flashError }}</div>
			{% endfor %}


			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div class="texte-rouge">
				<small><i>
					Entrer votre adresse mail et vous recevrez un lien pour changer le mot de passe.
				</i></small>
			</div>
            <hr>
            <div class="text-center">
			    <button class="btn btn-warning">Changer le mot de passe</button>
            </div>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}
