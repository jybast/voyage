{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Changer le mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrer votre adresse mail et vous recevrez un lien pour changer le mot de passe.               link to reset your password.
            </small>
        </div>

        <button class="btn btn-primary">Changer le mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}