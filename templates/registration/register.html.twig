{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="formulaire_conteneur">
    <div class="formulaire_masque">
        <div class="row">
            <div class="col">
                <div class="formulaire-logo">
                    <img src="{{ asset('assets/img/cc.png')| imagine_filter('vignette') }}  " alt="Logo">
                </div>
            </div>
            <div class="col">
                <h1 class="formulaire_titre">S'inscrire</h1>
            </div>
        </div>
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <div class="formulaire-inner">
        

        {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col">
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe :'
            }) }}
            
            </div>
            <div class="col">
            {{ form_row(registrationForm.pseudo) }}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.prenom) }}
            
            </div>
        </div>
            {{ form_row(registrationForm.agreeTerms) }}
            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-success mt-3">S'inscrire</button>
            </div>
        {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
