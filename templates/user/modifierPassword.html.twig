{% extends 'page.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
 <div class="formulaire_conteneur">
    <div class="formulaire_masque">
        <div class="login-logo">
            <a href="#"><img src="{{ asset('ressources/img/logo.png')| imagine_filter('miniature') }}  " alt="Logo"></a>
        </div>
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1 class="formulaire_titre">Changer le mot de passe</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrer votre adresse mail et vous recevrez un lien pour changer le mot de passe.
                </small>
            </div>

            <button class="btn btn-primary">Changer le mot de passe</button>
        {{ form_end(requestForm) }}
    </div>
</div>
{% endblock %}
