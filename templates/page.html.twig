<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<!-- Ballises meta pour le referencement -->
		<meta http-equiv="cache-control" content="no-cache"/>
		<!--<meta http-equiv="Refresh" content="10"> -->
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="Description" content="Blog personnel pour suivre nos voyages en camping-car">
		<meta name="Keywords" content="Blog, voyage, camping-car, famille">
		<meta name="Robots" content="noindex,nofollow"/>
		<meta name="Author" content="Jean-Yves BASTARD">
		<meta name="Copyright" content="Jyb@st-juillet2020"/>
		<meta name="Generator" content="Symfony 5, HTML, CSS">

		<title>
			{% block title %}Voyage Passion {% endblock %}
		</title>

		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
		<link rel="stylesheet" href="{{ asset('assets/css/theme.css')}}"> {% block stylesheets %}{% endblock %}
	</head>
	<body>
		<!-- conteneur de page global -->
		<div class="page-conteneur">
			{% block header %}
				<div class="page-header">
					<div class="row">
						<div class="col-sm-3">
							<div class="logo-container">
								<img  class="logo" src="{{ asset('assets/img/logo-transparent.png')| imagine_filter('miniature') }}" alt="Logo">
							</div>
						</div>
						<div class="col-sm-6">
							<h1 class="titre-blog">Passion Voyage</h1>
							<h2 class="titre-secondaire">Le blog destiné à la famille</h2>
						</div>
						<div class="col-sm-3">
							<p class="texte-italique">Partager nos expériences</p>
							<p class="texte-italique">Conseils de voyage</p>
							<p class="texte-italique">Conseils camping-car</p>
						</div>
					</div>
				</div>
			{% endblock %}
			{% block navigation %}
				<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
					<a class="navbar-brand" href="#">
						<img src="{{ asset('assets/img/logo.png')| imagine_filter('logo') }} " alt="Logo">
					</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#liste" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="liste">
						<ul class="navbar-nav">
							<li class="nav-item active">
								<a class="nav-link" href="{{ path('blog_accueil') }}">Accueil
									<span class="sr-only">(current)</span>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('blog_profil', {'id': app.user.id}) }}">Mon profil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('blog_contact') }}">Contacts</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="menuliste" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									Archives
								</a>
								<div class="dropdown-menu" aria-labelledby="menuliste">
									<a class="dropdown-item" href="{{ path('rechercher') }}">Rechercher un article</a>
									<a class="dropdown-item" href="#">Another action</a>
									<a class="dropdown-item" href="#">Something else here</a>
								</div>
							</li>
							{% if is_granted('ROLE_ADMIN') %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('admin_home') }}">Administration</a>
							</li>
							{% endif %}

							
						</ul>
					</div>
					<div>
						<ul class="nav justify-content-end">
							<li class="nav-item " >
								<a class="nav-link" href="{{ path('blog_logout') }}">Se déconnecter</a>
							</li>
						</ul>
					</div>
				</nav>

			{% endblock %}
			{% block body %}

				
			{% endblock %}
		    {% block footer %}
				<div class="copyright">
					<!-- Copyright -->
					<div class="copyright-text">Copyright:
						<a class="texte-rouge" href="">Jyba@st - 2020</a>
					</div>
					<!-- Copyright -->
				</div>
			{% endblock %}
		</div>
		{% block javascripts %}{% endblock %}
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
	</body>
</html>

	
